<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FuncionalidadMenu"
    android:padding="20px"
    android:background="#DCEAF5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgSML"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/textBienvenido"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Bienvenido"
        android:layout_below="@+id/imgSML"
        android:textAlignment="center"
        android:textSize="60px"/>

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textBienvenido"
        android:layout_marginLeft="70px"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/usuario"
        android:background="#ffffff"
        />

    <TextView
        android:id="@+id/textNoticias"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Usuario"
        android:textAlignment="center"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="100px"
        android:textSize="60px"/>

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textBienvenido"
        android:layout_marginLeft="610px"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/puntos"
        android:background="#ffffff"
        />

    <TextView
        android:id="@+id/textChat"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Chat"
        android:layout_below="@+id/button2"
        android:layout_marginLeft="710px"
        android:textSize="60px"/>


    <ImageButton
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="70px"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/foro"
        android:background="#ffffff"
        android:layout_marginTop="100px"
        />

    <TextView
        android:id="@+id/textForo"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Foro"
        android:layout_below="@+id/button3"
        android:layout_marginLeft="160px"
        android:textSize="60px"/>

    <ImageButton
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/button2"
        android:layout_marginLeft="610px"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/news"
        android:background="#ffffff"
        android:layout_marginTop="100px"

        />

    <TextView
        android:id="@+id/textOpiniones"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Noticias"
        android:layout_below="@+id/button4"
        android:layout_marginLeft="670px"
        android:textSize="60px"/>

    <ImageButton
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/button3"
        android:layout_marginLeft="70px"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:onClick="irPDF"
        android:src="@drawable/pdf"
        android:background="#ffffff"
        android:layout_marginTop="100px"
        />

    <TextView
        android:id="@+id/textPDF"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Descargar PDF"
        android:layout_below="@+id/button5"
        android:layout_marginLeft="30px"
        android:textSize="60px"/>

    <ImageButton
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/button4"
        android:layout_marginLeft="610px"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"

        android:src="@drawable/configurar"
        android:background="#ffffff"
        android:layout_marginTop="100px"
        />

    <TextView
        android:id="@+id/textQuienSomos"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:text="Quienes Somos"
        android:layout_below="@+id/button6"
        android:layout_marginLeft="560px"
        android:textSize="60px"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>